<% include ../partials/header %>


    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Campground!</h1>
        </div>
        
        <div class="col-4">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input id="name" class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="price">Price per night: </label>
                    <input id="price" class="form-control" type="number" name="price" placeholder="price/night" min="0.01" step="0.01"">
                </div>
               <div class="form-group">
                   <label for="image">Image URL:</label>
                    <input id="image" class="form-control" type="text" name="image" placeholder="image url">
               </div>
               <div class="form-group">
                    <label for="description">Campground Description:</label>
                    <input id=description" class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">
                    <button class="btn bnt-lg btn-primary btn-block">Submint</button>
                </div>
            </form>   
            <a href="/campgrounds">Go Back</a>

        </div>
    </div>



<% include ../partials/footer %>