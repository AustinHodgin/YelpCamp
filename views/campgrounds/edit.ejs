<% include ../partials/header %>


    <div class="row justify-content-center">
        <div class="col-md-12 text-center"> 
            <h1 >Edit <%= campground.name %></h1>
        </div>
       
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input id="name"class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="price">Price per night: </label>
                    <input id="price" class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01"">
                </div>
               <div class="form-group">
                   <label for="image">Image URL:</label>
                    <input id="image" class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
               </div>
               <div class="form-group">
                    <label for="description">Campground Description:</label>
                    <input id="description" class="form-control" type="text" name="campground[description]"value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn bnt-lg btn-primary btn-block">Submint</button>
                </div>
            </form>   
            <a href="/campgrounds">Go Back</a>

        </div>
    </div>



<% include ../partials/footer %>